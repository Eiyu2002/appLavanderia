---
import background from '../assets/background.svg';
---

<div id="container">
	<img id="background" src={background.src} alt="" fetchpriority="high" />
	<main>
		<div class="login__container">
			<div class="f__title">
				<h1>Login</h1>

			</div>
			<form action="">
				<label for="username">Username</label>
				<textarea name="username" id="user"></textarea>
				<label for="password">Password</label>
				<textarea name="password" id="password"></textarea>
				<div>

					<button type="submit">Aceptar</button>
				</div>
			</form>
		</div>
	</main>
</div>

<style>

	:root {

		--background-c: #000000f2;
	}

	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(100px);
	}

	main {
		height: 100vh;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.f__title {
		width: 100%;
		border-bottom: 2px solid rgba(255, 255, 255, 0.792);
		text-align: center;
	}

	.login__container {
		
		color: #fff;
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		gap: 1rem;
		padding:  2rem 4.5rem;
		border-radius: 1rem;
		background-color: var(--background-c)
	}

	form {
		display: flex;
		justify-content: center;
		
		align-items: center;
		flex-direction: column;
		

	}

	form > * {
		
		text-align: start;
		margin: 0.6rem 0;
	}

	button {

		background-color: #1dd1a1;
		border: 2px #1dd1a1 solid;
		border-radius: 2rem;
		padding:  0.7rem 2rem;
		color: #fff;
		margin: 1.5rem 0;

		font-size: medium;
		cursor: pointer;
	}

</style>
